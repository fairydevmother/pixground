<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head'); %>
   <title> <%= image.name %> | Download Image Now</title>

   
  <style>
	.fa {
  font-size: 50px;
  cursor: pointer;
  user-select: none;
}

.fa:hover {
  color: darkblue;
}


  </style>
  <link href="/assets/css/product.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>

<header>
  <%- include('partials/header'); %>
</header>


<main>
 
	<% 
	const tag= image.tags
	if(typeof tag !== 'undefined') {  %>

	
   <section class="content-item grey"  style="padding-top:5.5rem;padding-bottom:10rem;" id="gallery-item">
    <div class="container">
      <div class="row">
          <div class="col-sm-8" >
			 
			   <h2><%=image.name%></h2>
			   
			   <%  tag.forEach(function(image) { 
				%>
					<span class="tagText"><%=image%></span>
				 
			   <% }) %>
			   
              <img src="<%= image.profilePhotoLocation %>" class="img-responsive" alt="">
             
			</div>
            <div class="col-sm-4">
               
                <div class="box">
		
					<a class="btn" id="downloadImage" style="width:11rem;" href="<%= image.profilePhotoLocation %>"  download="<% image.address%>"rel="nofollow" onclick="_reg()" 
						class="block-gradient graHover dlbtn ga-click cate-5" data-ga-type="button" data-ga-label="5" > 
						<i class="bi bi-download" ></i>    Download
					</a> 


					<a href="https://twitter.com/intent/tweet?url=pixground.com/product/<%=image.name%>" style=" padding:10px;width:50px;">
						<img width="50px" style="border-radius:4px;" src="/img/twitter.png" /> 
					  </a>
					  <a href="javascript:;" style="padding:10px;width:50px;" >
						<img width="50px" style="border-radius:4px;" class="like" src="/assets/img/heart.png" />
            
					</a>

				</div>
				<div class="boxTwo">	
                   <ul class="list-unstyled">
                        <li>Description : <%=image.description%></li>
                        <li>Image Type : <%= image.imgType%></li>
                        <li>Resolution : <%= image.resolution%></li>
                    </ul>

					<a class="fancybox" class="btn btn-normal show-image" rel="chimps" href="<%=image.profilePhotoLocation%>">Full Size</a>
 
                </div>
				
            </div>
        </div>
    </div>
  </section>
  <% }  else { %>

    
   <section class="content-item grey" style="padding-top:5.5rem;padding-bottom:10rem;" id="gallery-item">
    <div class="container">
      <div class="row">
          <div class="col-sm-8" >
			 
			   <h2><%=image.name%></h2>
			   
			   
              <img src="<%= image.profilePhotoLocation %>" class="img-responsive" alt="">
             
			</div>
            <div class="col-sm-4">
               
                <div class="unbox">
		
					<a class="btn" id="downloadImage" style="width:11rem;" href="<%= image.profilePhotoLocation %>"  download="<% image.address%>"rel="nofollow" onclick="_reg()" 
						class="block-gradient graHover dlbtn ga-click cate-5" data-ga-type="button" data-ga-label="5" > 
						<i class="bi bi-download" ></i>    Download
					</a> 


					<a href="https://twitter.com/intent/tweet?url=/product/<%=image.name%>" style=" padding:10px;width:50px;">
						<img width="50px" style="border-radius:4px;" src="/assets/img/twitter.png" /> 
					  </a>
					  <a href="javascript:;" style="padding:10px;width:50px;" >
						<i  onclick="myFunction(this)" class="bi bi-heart"></i>
						<img width="50px" style="border-radius:4px;" class="like" src="/assets/img/heart.png" />
            
					</a>

				</div>
				<div class="boxTwo">	
                   <ul class="list-unstyled">
                        <li>Description : <%=image.description%></li>
                        <li>Image Type : <%= image.imgType%></li>
                        <li>Resolution : <%= image.resolution%></li>
                    </ul>

					<a class="fancybox" class="btn btn-normal show-image" rel="chimps" href="<%=image.profilePhotoLocation%>">Full Size</a>
 
                </div>
				
            </div>
        </div>
    </div>
  </section>


  <% }%>


 
      <div class="section section-our-team-freebie">
      <div class="container img-content" >
        <h3>Related Searches</h3>
        <div style="text-align:center;" class="row">
          
            <% items.forEach(function(image) { %>
                
             <div class="col-md-3 col-sm-4 col-xs-6 shrink ">
                <a href="/product/<%= image.name %>" class="fancybox" rel="ligthbox">
                
                <% if(image.imgType=='image/png'){ %>
                <div class="badge bg-dark text-white"  
                style="position:absolute;top: 0.5rem; right: 1rem">  4K  </div>
                <% } else { %>
                 
                <div> </div>
                    <% }%>
                <img title="<%=image.name %>"  class="img-responsive"  alt="<%= image.description %>"
                src="<%= image.profilePhotoLocation%>" />
            </a> 
        
            <p> <%= image.name%> </p>
            </div>
      <% }) %>  
        </div>
        </div>
      </div> 
   
    




</main>



<footer>
   <%- include('partials/footer'); %>
</footer>
      

 
  
  <script>
    
   function myFunction(x) {
  x.classList.toggle("fa-thumbs-down");
   }


  

	$(document).ready(function(){
     $(".fancybox").fancybox({
        openEffect: "none",
        closeEffect: "none"
    });
    
    $(".zoom").hover(function(){
		
		$(this).addClass('transition');
	}, function(){
        
		$(this).removeClass('transition');
	});
   });



  </script>
 
   


</body>
</html>